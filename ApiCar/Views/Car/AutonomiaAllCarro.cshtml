@model IEnumerable<ApiCar.Models.Car>

@{
    ViewData["Title"] = "ListAutonomia";
}

<h1>Lista de Autonomia de Todos os Carros </h1>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autonomia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autonomia)
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Index">Voltar para o inicio</a>
</div>
